{
  "openapi": "3.0.0",
  "info": {
    "title": "User API",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:8000", "description": "開発環境" }],

  "paths": {
    "/members": {
      "get": {
        "summary": "Members",
        "responses": {
          "200": {
            "description": "Success",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } }
          }
        }
      }
    },
    "/members/{userId}": {
      "get": {
        "summary": "Member",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "avatar": { "type": "string" },
          "joinedAt": { "type": "integer" }
        },
        "required": ["id", "name", "avatar"]
      },

      "Workshop": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["id", "title"]
      },

      "Event": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "workshopId": { "type": "string" },
          "theme": { "type": "string" },
          "date": { "type": "string" },
          "isCronTarget": { "type": "boolean" }
        },
        "required": ["id", "theme", "date", "isCronTarget"]
      }
    }
  }
}
